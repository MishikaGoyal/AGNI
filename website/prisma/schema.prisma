generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
    Principal 
    Admin 
}

model User{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    role Role
    loginId String @unique
    password String
    udiseId String
}

model School {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  UDISE_CODE       String
  School_Name      String
  State            String
  School_Category  String
  School_Management String
  School_Type      String
  Grade_Configuration String
  Year_of_Establishment Int
  Boundary_Wall    Boolean
  Total_Class_Rooms Int
  Library_Available Boolean
  Separate_Room_for_HM Boolean
  Drinking_Water_Available Boolean
  Playground_Available Boolean
  Electricity_Availability Boolean
  Total_Teachers   Int
  Total_Washrooms  String
  CWSN             Boolean
  Total_Students   Int
}


